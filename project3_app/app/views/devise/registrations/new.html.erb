    <%= f.text_field :name %>
  </div>

  <div class="form">
    <%= f.hidden_field :care, :value => 'true' %>
  
  </div>
    <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  </div>


  <div class = "secand_table">


  <div class="field">
    <%= f.text_field :phone %>
  </div>

  

  <div class="field">
    <%= f.text_field :nationality %>
  </div>
  <div class="field">
    <%= f.collection_select(:city_id, City.all.order(:name), :id, :name, {} ,class: "custom-select select22" ) %>
  </div>

  <div class="field">
    <%= f.text_field :nationality %>
  </div>



  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
</div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</div>


