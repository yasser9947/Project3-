<%# Sing Up %>

<div class=" register">
<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                <div class="row">
                    <div class="col-md-3 register-left">
                        <img src="https://i.ibb.co/hWwBP8N/logo.png" alt=""/>

                        <h3>Welcome</h3>
                        <input type="submit" name="" value="Login"/><br/>
                    </div>
                    <div class="col-md-9 register-right">
                        <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active Parent " id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Caredom</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link Nanny" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Caregiver</a>
                            </li>
                        </ul>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active paentDesplay" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <h3 class="register-heading">Apply as a Caredom Member:</h3>
                                <div class="row register-form">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                       <%= f.text_field :name %>
                                        </div>
                                        <div class="form-group">
                                           <%= f.text_field :phone %>
                                        </div>
                                        <div class="form-group">
                                    <% if @minimum_password_length %>
                                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                                        <% end %><br />
                                        <%= f.password_field :password, autocomplete: "new-password" %>                                        </div>
                                                                            <div class="form-group">
                                        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                                                                            </div>
                                        <div class="form-group">
                                            <div class="maxl">
                                                <label class="radio inline"> 
                                                    <input type="radio" name="gender" value="male" checked>
                                                    <span> Male </span> 
                                                </label>
                                                <label class="radio inline"> 
                                                    <input type="radio" name="gender" value="female">
                                                    <span>Female </span> 
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                            <%= f.hidden_field :care, :value => 'true' %>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                       <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                                        </div>
                                        <div class="form-group">
                                         <%= f.text_field :nationality %>
                                        </div>
                                        <div class="form-group">
                                             <%= f.collection_select(:city_id, City.all.order(:name), :id, :name, {} ,class: "custom-select select22" ) %>

                                        </div>
                                    
                                 <%= f.submit "Sign up" , class:"btnRegister"  %>
                                    </div>
                                                                                                                                                    <%end%>

                                </div>
                            </div>

      
                            <div class="tab-pane fade show nannyDesplay" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                <h3  class="register-heading">Apply as a Caregiver Member:</h3>
                                <div class="row register-form">
                                    <div class="col-md-6">                                    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                                        <div class="form-group">
    <%= f.text_field :name %>
                                        </div>
                                        <div class="form-group">
    <%= f.text_field :phone %>
                                        </div>
                                        <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                                        </div>
                                        <div class="form-group">
    <%= f.text_field :nationality %>
                                        </div>
 <div class="field form">
    <%= f.hidden_field :care, :value => 'false' %>
  </div>

                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
 <% if @minimum_password_length %>
  
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>                                        </div>
                                        <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                                        </div>
                                        <div class="form-group">
                                             <%= f.collection_select(:city_id, City.all.order(:name), :id, :name, {} ,class: "custom-select select22" ) %>

                                        </div>
                                        <div class="form-group">
                                    <%= f.number_field :age,  {min: 18} %>
                                        </div>
 <div class="form-group">
                                            <%= f.text_field :experience %>
                                        </div>

                                         <%= f.submit "Sign up" , class: "btnRegister" %>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
<% end %>